<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listitem_height"
    android:background="?android:attr/activatedBackgroundIndicator"    
	android:layout_gravity="center_vertical" 
    android:paddingLeft="@dimen/activity_horizontal_margin_large"
    >
<!--
     
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="4dp"
 -->    
    <ImageView
        android:id="@android:id/icon"
	    android:layout_width="@dimen/listitem_image_size"
	    android:layout_height="@dimen/listitem_image_size"
	    android:layout_margin="@dimen/listitem_small_margin"
	    android:contentDescription="@string/app_name"
	/>
<!-- 
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
    	android:paddingLeft="8dip"
    	android:paddingBottom="8dip"
    	android:paddingTop="8dip"
	    android:layout_toRightOf="@android:id/icon"
	    android:orientation="vertical" >
 -->
	<TextView
	    android:id="@android:id/text1"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textAppearance="@android:style/TextAppearance.Large"
	    android:layout_toRightOf="@android:id/icon"
	    android:paddingTop="@dimen/listitem_small_margin"
	    android:paddingLeft="@dimen/listitem_small_margin"
    />
    
	<TextView
	    android:id="@android:id/text2"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textAppearance="@android:style/TextAppearance.Medium"
	    android:layout_toRightOf="@android:id/icon"
	    android:layout_below="@android:id/text1"
	    android:paddingLeft="@dimen/listitem_small_margin"
    />
	
</RelativeLayout>
